{
  "compilerOptions": {
    "target": "ES6",                
    "module": "CommonJS",           
    "strict": true,                 
    "outDir": "./dist",             
    "rootDir": "./src",             
    "allowJs": false,               
    "checkJs": false,               
    "esModuleInterop": true,        
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true            
  },
  "include": ["src/**/*"],          
  "exclude": ["node_modules", "dist"]
}
